<h1>My Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= form_for(task) do |f| %>
        <%= f.check_box :completed %>
        <%= label_tag(:completed, (link_to task.title, task_path(task))) %>
        <%= link_to "-----Delete",
              task_path(task),
              method: :delete,
              data: { confirm: "Are you sure?" } %>
      <% end %>
    </li>
  <% end %>
</ul>
<%= link_to 'Add a new task', new_task_path %>
