<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p>
  <%= form_for(@task) do |f| %>
    <%= label_tag(:completed, (@task.completed ? 'This task is completed' : 'This task is not completed yet')) %>
    <%= f.check_box :completed %>
  <% end %>
</p>
<%= link_to 'Back to list', tasks_path %>
<p>
  <%= link_to 'Edit this task', edit_task_path %>
</p>
